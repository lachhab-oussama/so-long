{
    "tasks": [
        {
        "label": "Build so_long",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",
          "*.c",
          "./get_next_line/*.c",
          "-o",
          "so_long",
		  "-L.",
		  "-lmlx",
		  "-lXext",
		  "-lX11",
		  "-lm"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                ""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
